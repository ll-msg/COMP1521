#include <stdio.h>

int main(int argc, char **argv) {
    printf("Program name: ");
	printf("%s\n", argv[0]);
	int num = 0;
	if (argc == 1) {
	    printf("There are no other arguments\n");
	} else {
	    printf("There are ");
	    printf("%d", argc - 1);
	    printf( " arguments:\n");
	    printf("\t");
	    
	    for (num = 1; num < argc - 1; num++) {
	        printf("Argument");
	        printf(" %d", num);
	        printf(" is ");
	        printf("\"");
	        printf("%s", argv[num]);
	        printf("\"");
	        printf("\n");
	        printf("\t");
	    }
	    printf("Argument");
	        printf(" %d", num);
	        printf(" is ");
	        printf("\"");
	        printf("%s", argv[num]);
	        printf("\"");
	        printf("\n");
	}
	return 0;
}
